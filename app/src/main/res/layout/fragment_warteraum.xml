<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.idlepolicetycoon.project.view.WarteraumFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutWarteraum"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/warteraum_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Warteraum"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/upgradeButtonWarteraum"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/upgrade"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
