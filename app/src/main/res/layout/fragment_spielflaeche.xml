<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.idlepolicetycoon.project.view.SpielflaecheFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutSpielflaeche"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="204dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/spielflaeche_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Hospital"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/upgradeButtonSpielflaeche"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="144dp"
            android:background="@drawable/upgrade"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
